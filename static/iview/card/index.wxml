<div class="i-class i-card {{ full ? 'i-card-full' : '' }}">
    <div class="i-class i-card-header">
        <div class="i-card-header-content">
            <image class="i-card-header-thumb" src="{{ thumb }}" mode="aspectFit" wx:if="{{ thumb }}" />
            {{ title }}
        </div>
        <div class="i-card-header-extra" wx:if="{{ extra }}">{{ extra }}</div>
    </div>
    <div class="i-class i-card-body"><slot name="content"></slot></div>
    <div class="i-class i-card-footer"><slot name="footer"></slot></div>
</div>
